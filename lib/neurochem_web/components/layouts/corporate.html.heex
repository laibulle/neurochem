<header class="bg-white shadow-sm" data-theme="light" x-data="{ mobileMenuOpen: false }">
  <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 justify-between items-center">
      <div class="flex items-center">
        <a href="/" class="flex items-center gap-3">
          <div class="text-2xl font-bold text-blue-600">NEUROCHEM</div>
          <div class="text-xs text-gray-500 hidden sm:block">Pharmaceutical Innovation</div>
        </a>
      </div>
      <div class="hidden md:flex items-center space-x-8">
        <a href="/about" class="text-gray-700 hover:text-blue-600 transition-colors">About</a>
        <a href="/research" class="text-gray-700 hover:text-blue-600 transition-colors">Research</a>
        <a href="/products" class="text-gray-700 hover:text-blue-600 transition-colors">Products</a>
        <a href="/contact" class="text-blue-600 font-semibold hover:text-blue-700 transition-colors">Contact Us</a>
      </div>
      <button @click="mobileMenuOpen = !mobileMenuOpen" class="md:hidden p-2 text-gray-700 hover:text-blue-600" aria-label="Menu">
        <svg x-show="!mobileMenuOpen" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
        <svg x-show="mobileMenuOpen" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" x-cloak>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Mobile menu -->
    <div x-show="mobileMenuOpen" x-transition class="md:hidden pb-4" x-cloak>
      <div class="flex flex-col space-y-2 pt-2">
        <a href="/about" class="px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded transition-colors">About</a>
        <a href="/research" class="px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded transition-colors">Research</a>
        <a href="/products" class="px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded transition-colors">Products</a>
        <a href="/contact" class="px-4 py-2 text-blue-600 font-semibold hover:bg-blue-50 rounded transition-colors">Contact Us</a>
      </div>
    </div>
  </nav>
</header>

<main class="min-h-screen bg-gray-50">
  <%= @inner_content %>
</main>

